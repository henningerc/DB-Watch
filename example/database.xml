<xml>
  <dataset type="php" url="192.168.2.2/index.php" authenticate="true">
    <table name="people">
      <field name="id" type="int" primary="true" />
      <field name="name" type="varchar[20]" />
      <field name="surname" type="varchar[20]" />
      <field name="adress" type="varchar[30]" />
      <field name="zipcode" type="varchar[10]" />
      <field name="city" type="varchar[30]" />
      <field name="phone" type="varchar[20]" />
      <field name="sex" type="enum{f, m}" />
    </table>
    
    <table name="jobs">
      <field name="id" type="int" />
      <field name="name" type="varchar[20]" />
      <field name="description" type="varchar[100]" />
    </table>
    
    <table name="firms">
      <field name="id" type="int" primary="true" />
      <field name="name" type="varchar[30]" />
      <field name="adress" type="varchar[30]" />
      <field name="zipcode" type="varchar[10]" />
      <field name="city" type="varchar[30]" />
      <field name="phone" type="varchar[20]" />
      <field name="partner" type="varchar[30]" />
    </table>
    
    <table name="internship">
      <field name="id" type="int" />
      <field name="firm" type="int" />
      <field name="person" type="int" />
      <field name="report" type="memo" />
      <field name="start" type="date" />
      <field name="end" type="date" />
      
      <connection name="c_person" field="person" table="people" />
      <connection name="c_firm" field="firm" table="firms" />
    </table>
    
    <table name="contacts">
      <field name="id" type="int" primary="true" />
      <field name="person" type="int" />
      <field name="firm" type="int" />
      <field name="memo" type="memo" />
      
      <connection name="c_firm" field="firm" table="firms" />
      <connection name="c_person" field="person" table="people" />
    </table>
  </dataset>
  
  <form name="start" start="true">
    <button name="people" type="showForm" form="people" />
    <button name="firm" type="showForm" form="jobs" />
  </form>
  
  <form name="people" table="people">
    <input name="name" description="Name" localizer="people.name" field="name" />
    <input name="surname" description="Vorname" localizer="people.surname" field="surname" />
    <input name="adress" description="Adresse" localizer="people.adress" field="adress" />
    <input name="zipcode" description="PLZ" localizer="people.zipcode" field="zipcode" />
    <input name="city" description="Ort" localizer="people.city" field="city" />
    <input name="phone" description="Telefonnummer" localizer="people.phone" field="phone" />
    <dropDown name="sex" type="dropDownBox" description="Geschlecht" localizer="people.sex" field="sex" >
      <value description="weiblich" value="f" localizer="people.sex.f" />
      <value description="mÃ¤nnlich" value="m" localizer="people.sex.m" />
    </dropDown>
  </form>
  
  <form name="firm">
    
  </form>
  
  
</xml>
